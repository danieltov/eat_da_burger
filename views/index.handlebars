<div class="row m-0 h-50">
    {{#each burgers }}
    <div class="col m-0 bg-primary">
        {{#unless devoured}}
        <!-- Not Devoured Burgers Here -->
        <div class="burger-container">
            <img src="../public/assets/img/burger.png">
            <button class="btn btn-lg btn-devour" data-id={{id}}>Devour!</button> </div> {{/unless}}
    </div>
    <div class="col m-0 bg-danger">
        {{#if devoured}}
        <!-- Devoured Burgers Here -->
        {{/if}}
    </div>
</div>
<div class="row m-0 h-50">
    <div class="col m-0 bg-warning d-flex justify-content-center align-items-center">
        <form class="add-burger">
            <input type="text" id="ba" name="name" placeholder="Enter burger's name..." class="form-control mt-3 p-3" />
            <hr class="w-25 text-center" />
            <input type="radio" name="devoured" value="1" />
            Devoured!<br />
            <input type="radio" name="devoured" value="0" checked />
            Undevoured

            <hr class="w-25 text-center" />

            <button type="submit" class="btn btn-lg btn-block bg-primary text-white btn-add">
                Add Burger
            </button>
        </form>
    </div>
</div>